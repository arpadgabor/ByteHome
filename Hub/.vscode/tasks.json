{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "group": "build",
      "type": "shell",
      "command": "idf.py build",
      "problemMatcher": {
        "owner": "c",
        "fileLocation": ["relative", "${workspaceFolder}/build"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}